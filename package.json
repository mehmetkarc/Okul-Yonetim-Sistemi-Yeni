{
  "name": "okul-yonetim-sistemi",
  "version": "1.0.0",
  "description": "Okul Yönetim Sistemi - Profesyonel Çözüm",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --x64",
    "build:portable": "electron-builder build --win portable",
    "publish": "electron-builder build --win --x64 --publish always"
  },
  "keywords": [
    "okul",
    "yönetim",
    "eğitim"
  ],
  "author": "Okul Yönetim Sistemi",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "electron-updater": "^6.1.7",
    "puppeteer": "^24.26.0",
    "sql.js": "^1.10.3",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.okulys.app",
    "productName": "Okul Yönetim Sistemi",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Okul Yönetim Sistemi"
    },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist",
      "!.git"
    ],
    "publish": {
      "provider": "github",
      "owner": "mehmetkarc",
      "repo": "Okul-Yonetim-Sistemi",
      "releaseType": "release"
    }
  }
}
